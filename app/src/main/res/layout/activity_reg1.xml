<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/ccbg"
    tools:context="com.example.bharath.collegeclubs.Reg1">

    <ImageView
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:background="@drawable/teacher"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="53dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Faculty"
        android:id="@+id/fac"
        android:textStyle="bold"
        android:textSize="35dp"
        android:textColor="@color/yale"
        android:layout_marginTop="220dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:background="@drawable/student"
        android:layout_below="@+id/fac"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Student"
        android:id="@+id/stu"
        android:textStyle="bold"
        android:textSize="35dp"
        android:textColor="@color/yale"
        android:layout_below="@+id/fac"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
